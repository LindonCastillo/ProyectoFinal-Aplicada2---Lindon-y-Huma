@page "/ConsultaCompras"

<h3>Consulta de Compras</h3>

<div class="form-row">
    <div class="col">
        <InputSelect @bind-Value="Criterio" class="form-control">
            <option value="">Elija una opcion</option>
            <option value="Todos">Todos</option>
            <option value="Itebis">Itebis</option>
            <option value="ProveedorId">ProveedorId</option>
            <option value="Balance">Balance</option>
        </InputSelect>
    </div>
</div>


@if (Compras == null)
{
    <p>No hay datos que mostrar</p>
    return;
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha de compra</th>
                <th>ProveedorId</th>
                <th>Itebis</th>
                <th>Balance</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Compras)
            {
                <tr>
                    <td>@item.CompraId</td>
                    <td>@item.FechaCompra</td>
                    <td>@item.ProveedorId</td>
                    <td>@item.Itbis</td>
                    <td>@item.Balance</td>
                    <td><a class="btn btn-primary" href="compra/@item.CompraId">Ver</a></td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    List<Compras> Compras = new List<Compras>();

    protected override void OnInitialized()
    {
        Compras = comprascontroller.GetList(p => true);
    }

    private string filtro;
    private string Criterio;

    public List<Compras> listado { get; set; }

    private void Filtrar()
    {
        if(Criterio.Trim().Length>0)
            try
            {
                if(Criterio == "Todos")
                {
                    listado = comprascontroller.GetList(P => true);
                }
                else
                 if(Criterio == "Itebis")
                {
                    listado = comprascontroller.GetList(p => p.ProveedorId.ToString() == Criterio);
                }
                else if(Criterio == "Itebis")
                {
                    listado = comprascontroller.GetList(p => p.Itbis.ToString() == Criterio);
                } else
                {
                    listado = comprascontroller.GetList(p => p.Balance.ToString() == Criterio);
                }

            }catch
            {
                throw;
            }
    }
    }

}
